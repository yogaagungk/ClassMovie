<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:textSize="@dimen/row_title_size"
        android:textStyle="bold"
        android:text="Judul Film"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/img_time"
            android:src="@drawable/ic_watch_later_green_a400_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_release_date"
            android:textSize="@dimen/row_release_date"
            android:textStyle="italic"
            android:text="20-09-1995"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/img_star"
            android:src="@drawable/ic_star_green_a400_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_rating"
            android:textSize="@dimen/row_release_date"
            android:textStyle="bold"
            android:text="7.5"
            android:textColor="@color/rating_color"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

</LinearLayout>